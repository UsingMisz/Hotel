            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入住人"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_margin="20dp"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1间房填写1个入住人"
